{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Outputs": {
    "AcornRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "AcornRole",
          "Arn"
        ]
      }
    }
  },
  "Parameters": {
    "Principal": {
      "Type": "String",
      "Default": "arn:aws:iam::718995686428:role/byoc-source-trust-role"
    },
    "ExternalId": {
      "Type": "String"
    },
    "Token": {
      "Type": "String"
    },
    "CallbackURL": {
      "Type": "String"
    }
  },
  "Resources": {
    "AcornManagedPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Acorn Account Policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
